/*cssreset.com*/
* {
	margin:0;
	padding:0;
	border:0;
	outline:0;
	font-size:100%;
	line-height:1em;
	text-decoration:none;
	vertical-align:baseline;
}
/*end reset*/


body{
    font-family: Arial,"Helvetica Neue",Helvetica,sans-serif;
	background-color:rgba(211,80,80,.25);
	/*background-color:rgba(211,80,80,.25);*/
	background-color:#;
	margin:10px;
}

#rightBackground{
	background-color:rgba(102,102,187,.25);
	width:50%;
	position:absolute;
	right:0px;
	top:0px;
	height:100%;
	z-index: -1;
}

#rightBackgroundClear{
	background-color:white;
	width:50%;
	position:absolute;
	right:0px;
	top: 0px;
	height:100%;
	z-index: -2;
}

#shader{
	width:310px;
	margin:0px;
	position: absolute;
	left:0px;
	border: 2px solid black;
	background-color: white;
	transition: left 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
}

#header{
    height:120px;
    background-color: blue;
    margin-bottom:10px;
}

#info{
    height:120px;
    background-color:red;
    margin-bottom:20px;
}

#playerOne{
    width:300px;
    height:100px;
    float:left;
    background-color:yellow;
    margin:10px;
}

#playerTwo{
    width:300px;
    height:100px;
    float:right;
    background-color:yellow;
    margin:10px;
}

#content{
	width:960px;
	margin:auto;
	position: relative;
/*	background-color:white;*/
	overflow: hidden;
	height:960px;
}

#game{
	display: flex;
	flex-wrap: wrap;
    border:2px solid black;
    overflow:auto;
    width:956px;
    background-color:#999999;
	transition: 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
	position: absolute;
	top:0px;
	right:0px;
}

#game.small{
	width: 632px;
}

#chatHistory{
	width: 100%;
	height: 275px;
	margin: 0 auto 5px auto;
	border-bottom: 1px solid black;
}

#chatBox{
	padding:10px 5px;
	width:300px;;
}

#chatBox input[type=text]{
	background: none;
	border:none;
	width:100%;
	
}
/*
#chatBox input[type=text]:active,
#chatBox input[type=text]:focus{
	border: none;
}
*/
.board.h-center{
    margin-left:4px;
    margin-right:4px;
}

.board.v-center{
    margin-top:4px;
    margin-bottom:4px;
}

.square.h-center{
    margin-left:2px;
    margin-right:2px;
}

.square.v-center{
    margin-top:2px;
    margin-bottom:2px;
}

.board{
/*    float:left;*/
	display: flex;
	flex-wrap: wrap;
    width:316px;
    background-color:#ccc;
	transition: 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
/*
	transition: width 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
	transition: height 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
*/
}

/*to prevent transition issues*/
.row{
	display:flex;
	width:100%;
}

.small .board{
	width:208px;
}

.board:hover > .row > .square{
    background-color:#bbbbbb;
}

.square{
/*    float:left;*/
    height:104px;
    width:104px;
    line-height:104px;
    text-align:center;
    background-color:#eeeeee;
    font-size: 76px;
    font-weight:bold;
	text-transform: uppercase;
	transition: 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94), background-color 1ms 
}

.small .square{
	height:68px;
	width:68px;
	line-height:68px;
	font-size:54px;
}

.board:hover > .row > .square:hover{
    background-color:#ddaaaa;
    cursor:pointer;
}

span.x{
    color: #d35050;
}

span.o{
    color: #6666bb;
}

div.x{
    background-color:#d35050;
}

.chatMsg, .servMsg{
	display: block;
}
