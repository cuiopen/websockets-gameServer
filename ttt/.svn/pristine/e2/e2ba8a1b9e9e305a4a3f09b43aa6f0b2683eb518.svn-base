#chatBox input[type=text]:active,
#chatBox input[type=text]:focus{
	border: none;
}
*/
.board.h-center{
    margin-left:7px;
    margin-right:7px;
}

.board.v-center{
    margin-top:7px;
    margin-bottom:7px;
}

.square.h-center{
    margin-left:2px;
    margin-right:2px;
}

.square.v-center{
    margin-top:2px;
    margin-bottom:2px;
}

.board{
/*    float:left;*/
	display: flex;
	flex-wrap: wrap;
    width:304px;
    background-color:#ccc;
	transition: width 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
	border: 3px solid white;
	margin:3px;
	position:relative;
/*
	transition: width 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
	transition: height 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
*/
}

.board:after {
	content: '';
	position: absolute;
	top:-6px;
	left:-6px;
	right:-6px;
	bottom:-6px;
	background: white;
	z-index:-1;

}

/*to prevent transition issues*/
.row{
	display:flex;
	width:100%;
}

.small .board{
	width:196px;
}

.board:hover > .row > .square{
    background-color:rgba(187,187,187,.75);
}

.square{
    height:100px;
    width:100px;
    line-height:100px;
    text-align:center;
    background-color:#ffffff;
    font-size: 76px;
    font-weight:bold;
	text-transform: uppercase;
	transition: 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94), background-color 1ms 
}

.small .square{
	height:64px;
	width:64px;
	line-height:64px;
	font-size:54px;
}

.board:hover > .row > .square:hover, .active.board:hover > .row > .square:hover{
    background-color:#ddaaaa;
    cursor:pointer;
}

.active .square{
	/*background-color:#d7ead7;*/
	background-color:#B7EFC0;
}

.board.active:hover{
	background-color:#EAEAEA;
}

.board.active:hover > .row > .square{
	/*background-color: #D0DED0;*/
	background-color:#BAD6BF;
}

.lastMove{
	background-color:#FFFC73;
}
.active .lastMove.square{
	background-color:#E9F789;
}

.board:hover > .row > .square.lastMove{
/*	background-color:#DEDEB5;*/
	background-color: #DEDD98;
}

.board:hover > .row > .square.lastMove:hover{
 /*   background-color:#ddaaaa;*/
	background-color:#E4BE9B;
}

span.x{
    color: #d35050;
}

span.o{
    color: #6666bb;
}

.board.x{
	border-color: #d35050;
}
.board.x:after{
	background: #d35050;
}

.board.o{
	border-color: #6666bb;
}

.board.o:after{
	background: #6666bb;	
}

.board.x.o{
	border-color:#6666bb;
}

.board.x.o:after{
	background: #d35050;
}

div.x{
    /*background-color:#d35050;*/
}

.chatMsg, .servMsg{
	display: block;
}
