/*cssreset.com*/
* {
	margin:0;
	padding:0;
	border:0;
	outline:0;
	font-size:100%;
	line-height:1em;
	text-decoration:none;
	vertical-align:baseline;
}
/*end reset*/


body{
    font-family: Arial,"Helvetica Neue",Helvetica,sans-serif;
	background: linear-gradient(to right, #f4d3d3 50%,#d8d8ed 50%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f4d3d3', endColorstr='#d8d8ed',GradientType=1 ); /* IE6-9 */
	overflow: hidden;
}

#rightBackground{
	background-color:#d8d8ed;
	width:100%;
	position:absolute;
	right:-50%;
	top: 0px;
	height:100%;
	transition: right 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
	/*z-index: -2;*/
}

#content.small #rightBackground{
	right:-643px;
}

#shader{
	width:310px;
	margin:0px;
	position: absolute;
	left:0px;
/*	border: 2px solid black;
	background-color: white;*/
	transition: left 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
}

#header{
    height:120px;
    background-color: blue;
    margin-bottom:10px;
}

#info{
    height:120px;
    background-color:red;
    margin-bottom:20px;
}

#playerOne{
    width:300px;
    height:100px;
    float:left;
    background-color:yellow;
    margin:10px;
}

#playerTwo{
    width:300px;
    height:100px;
    float:right;
    background-color:yellow;
    margin:10px;
}

#content{
	width:960px;
	margin:auto;
	padding-top:20px;
	position: relative;
	overflow: hidden;
	min-height:960px;
	height: 100vh;
	background: #f4d3d3;
	transition: 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
}

#game{
	display: flex;
	flex-wrap: wrap;
    border:2px solid black;
    overflow:auto;
    width:956px;
    background-color:#999999;
	transition: 500ms cubic-bezier(0.17, 0.04, 0.03, 0.94);
	position: absolute;
	top:20px;
	right:0px;
	z-index:5;
}

#game.small{
	width: 632px;
}

#chatContainer{
	width:100%;
	margin-bottom:10px;
	border: 2px solid black;
	background-color: white;
}

#status{
	width:100%;
	height:309px;
	border: 2px solid black;
	background:#B7EFC0;
}

#chatHistoryContainer{
	width: 100%;
	height: 260px;
	margin-bottom:5px;
	border-bottom: 1px solid black;
}

#chatHistory{
	width:300px;
	margin:5px auto;
	overflow-y: scroll;
	min-height:100%;
}

#chatBox{
	padding:10px 5px;
	width:300px;;
}

#chatBox input[type=text]{
	background: none;
	border:none;
	width:100%;
	
}
